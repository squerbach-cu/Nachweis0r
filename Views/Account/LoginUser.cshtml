@model LoginViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="col-md-4">
    <form method="post">
        <h2>Login to your account.</h2>
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true"/>
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="checkbox">
            <label asp-for="RememberMe" class="form-label">
                <input class="form-check-input" asp-for="RememberMe"/>
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
        <div class="form-group row">
            <div><button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button></div>
            <div><button asp-controller="Account" asp-action="CreateUser" class="w-100 btn btn-lg btn-secondary">Register</button></div>
        </div>
    </form>
</div>